{
  "name": "niem-model-api-specification",
  "version": "1.0.0",
  "description": "Mock API specification for the NIEM model structure",
  "main": "index.js",
  "scripts": {
    "build": "npm run convert && npm run test && npm run docs",
    "docs": "redoc-cli bundle openapi.yaml && mv redoc-static.html docs/index.html && replace \"ReDoc documentation\" \"NIEM Model API\" docs/index.html",
    "convert": "npm run convert:schemas && npm run convert:openapi",
    "convert:schemas": "json-dereference -s schemas/api-schema.yaml -o schemas/api-schema.json",
    "convert:openapi": "speccy resolve openapi-base.yaml -j -o openapi.yaml",
    "test": "npm run test:schemas && npm run test:examples && npm run test:openapi",
    "test:schemas": "ajv -s assets/json-schema-07.json -d \"schemas/*-schema.json\"",
    "test:examples": "ajv -s schemas/api-schema.json -r node_modules/niem-model-schema/schemas/model-schema.json -d \"examples/**/*.json\"",
    "test:openapi": "speccy lint -s openapi-tags-alphabetical openapi.yaml",
    "watch": "npm-watch build",
    "watch:examples": "npm-watch test:examples"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "ajv-cli": "^3.0.0",
    "cash": "^0.8.0",
    "json-dereference-cli": "^0.1.2",
    "niem-model-schema": "github:cdmgtri/niem-model-schema#dev",
    "npm-watch": "^0.4.0",
    "redoc-cli": "^0.7.0",
    "replace": "^1.0.0",
    "speccy": "^0.8.5",
    "yamljs": "^0.3.0"
  },
  "watch": {
    "build": {
      "patterns": [
        "schemas",
        "examples",
        "."
      ],
      "extensions": "yaml",
      "ignore": "openapi.yaml"
    },
    "test:examples": {
      "patterns": [
        "examples"
      ],
      "extensions": "json"
    }
  },
  "dependencies": {}
}
